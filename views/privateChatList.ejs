<div class="container" ng-controller="privateChatListCtrl" ng-show="showList.privateChatList">
    <div class="container">
        <h3> Private Chat List </h3>
        <div class="container">
            <div class="input-group">
                <input ng-model="privatechat_search_area" id="privatechat_search_area" type="text" class="form-control" placeholder="Search Private Chat Contents" >
                <span class="input-group-btn">
<button class="btn btn-info" type="submit" ng-click="searchPrivateChat()">Search</button>
                </span>
            </div>
        </div>

        <div class="container" ng-show="showList.privateChatSearchResult">
            <div class="panel panel-default " ng-repeat="privatechat in privatechat_search_results track by $index">
                <div class="panel-heading"><span>{{privatechat.sender}} @ </span><span>(Status: {{privatechat.emergency_status}}){{privatechat.timestamp |  date: 'MM.dd.yyyy HH:mma' }}</span> <span>Receiver:{{privatechat.receiver}}</span></div>
                <div class="panel-body"><span class="content">{{privatechat.message}}</span><span class="avatar"></span></div>
            </div>

            <div ng-if="searchPrivateChatMore">
                <div style="cursor:pointer" ng-click="GetMoreSearchResults()">----More----</div>
            </div>
        </div>



