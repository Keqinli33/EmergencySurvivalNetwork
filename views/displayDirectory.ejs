<!--div id="directory-container" display="none" ng-controller="joinCommunityCtrl" class="container"-->
<div id="directory-container" class="container" ng-show="showList.directory" class="ng-hide">
    <h3> Directory </h3>
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" type="submit" ng-click="searchByStatus()" class="btn btn-default">Search Status</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" type="submit" ng-click="searchByName()" class="btn btn-default">Search Name</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" type="submit" ng-click="reset()" class="btn btn-default">Reset</button>
        </div>
    </div><br>

    <center>
    <div class="btn-group btn-group-justified" data-toggle="buttons" ng-show="searchStatus">

        <label class="btn btn-success"><input type="radio" name="status" id="OK" value="OK" ng-click="getStatus('OK')">OK</label>
        <label class="btn btn-warning"><input type="radio" name="status" id="Help" value="Help" ng-click="getStatus('Help')">Help</label>
        <label class="btn btn-danger"><input type="radio" name="status" id="Emergency" value="Emergency" ng-click="getStatus('Emergency')">Emergency</label>

    </div>
    </center>
    <div class="container" ng-show="searchName">
        <input ng-model="namesearchmsg" id="namesearchmsg" type="text" class="form-control" placeholder="Search Citizen Name" autofocus>
        <button class="btn btn-info btn-block" type="submit" ng-click="searchDirectory()">Search</button>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>
             Users
          </th>
          <th>
              Status
          </th>
            <th>Chat</th>
        </tr>
      </thead>
      <tr ng-repeat="user in details1">
        <td col span="1" style="width: 45%;">
            Online {{user}}
        </td>
          <td col span="1" style="width: 65%;">
              <img ng-show="statusList[user] == 'OK'" src="/images/Okay.png" height="15%" width="15%"/><img ng-show="statusList[user] == 'Help'" src="/images/Warning.png" height="15%" width="15%"/><img ng-show="statusList[user] == 'Emergency'" src="/images/Emergency.png" height="7%" width="15%"/>
          </td>
		<td col span="1" style="width: 20%;"><button ng-click="openPrivateChat(user)">Chat</button></td>
        <td col span="1" style="width: 20%;"><button ng-click="showProfile(user)" ng-show="userClass.privilegelevel == 'Administrator'">Profile</button></td>
      </tr>
        <tr ng-repeat="user in details2">
            <td>
                Offline {{user}}
            </td>
            <td>
                <img ng-show="statusList[user] == 'OK'" src="/images/Okay.png" height="15%" width="15%"/><img ng-show="statusList[user] == 'Help'" src="/images/Warning.png" height="15%" width="15%"/><img ng-show="statusList[user] == 'Emergency'" src="/images/Emergency.png" height="7%" width="15%"/>

            </td>
			<td><button ng-click="openPrivateChat(user)">Chat</button></td>
      <td><button ng-click="showProfile(user)" ng-show="userClass.privilegelevel == 'Administrator'">Profile</button></td>
        </tr>
    </table>
    <!--h5 ng-show="userClass.privilegelevel == 'Citizen'">123</h5-->
</div>
