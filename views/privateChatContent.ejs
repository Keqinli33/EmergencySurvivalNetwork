<div class="container" ng-controller="privateChatCtrl" ng-show="showList.chatPublicly">
    <div class="container">
        <div class="panel panel-default " ng-repeat="msg in privateMsgs track by $index">
            <div class="panel-heading"><span>{{msg.username}} @ </span><span>{{msg.timestamp |  date: 'MM.dd.yyyy HH:mma' }}</span></div>
            <div class="panel-body"><span class="content">{{msg.pubmsg}}</span><span class="avatar"></span></div>
            </div>
    </div>
    <div class="container">
        <div class="form-signin">
            <input ng-model="private_msg" id="pubmsg" type="text" class="form-control" placeholder="Send Public Msg" required autofocus>
            <button class="btn btn-lg btn-primary btn-block" type="submit" ng-click="postPrivateMsg()">Send Msg</button>
        </div>
    </div>

</div>
